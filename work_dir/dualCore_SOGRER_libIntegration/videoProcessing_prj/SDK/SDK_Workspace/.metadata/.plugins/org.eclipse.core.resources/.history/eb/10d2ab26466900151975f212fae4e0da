// contains common types/structures that are to be used by various IP drivers

#ifndef __COMMON_H__
#define __COMMON_H__

// TODO: for now assuming every IP register in the system to be of 32 bits..later also think if regs could be of other widths like 64 bits etc

#include "config.h"
#if PLATFORM == XILINX_FPGA
    #include "xil_io.h"
#endif
// #elsif for other platforms


typedef struct {
    unsigned int offset;
    unsigned int mask;
    unsigned int value;
} RegType;


void RegWrite(unsigned int addr, unsigned int mask, unsigned int value);
unsigned int RegRead(unsigned int addr);


#endif
